    preserve_sources_list: false
  debconf-selections: |
    tasksel tasksel/first multiselect Basic Ubuntu server
    xserver-xorg xserver-xorg/autodetect_monitor boolean true
  early-commands:
    - systemctl stop ssh.service
    - systemctl stop ssh.socket
  identity:
    hostname: ubuntu
    username: vagrant
