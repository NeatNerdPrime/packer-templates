  late-commands:
    - "sed -i 's/^GRUB_CMDLINE_LINUX_DEFAULT=\x22\\(.*\\)\x22/GRUB_CMDLINE_LINUX_DEFAULT=\x22net.ifnames=0 biosdevnames=0 \\1\x22/' /target/etc/default/grub"
    - curtin in-target --target=/target -- grub-mkconfig -o /boot/grub/grub.cfg
  locale: en_US
  network:
    network:
      ethernets:
        eth0:
          dhcp4: true
      version: 2
  ssh:
