  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/vagrant.sh",
        "../provisioners/dwm.sh"
      ],
      "environment_vars": [
        "ROOT_PASSWORD={{user `root_password`}}",
        "VAGRANT_USERNAME={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "DWM=dwm=6.2-r0",
        "ST=st=0.8.2-r1",
        "DMENU=dmenu=4.9-r0",
        "XRANDR=xrandr=1.5.1-r0",
        "XRDP=xrdp=0.9.11-r0"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso"],
      "script": "../provisioners/virtualbox_alpine3.8+.sh",
      "environment_vars": [
        "VIRTUALBOX_GUEST_ADDITIONS=virtualbox-guest-additions=6.0.14-r0",
        "VIRTUALBOX_GUEST_MODULES_LTS=virtualbox-guest-modules-lts=5.4.111-r0",
        "VIRTUALBOX_GUEST_ADDITIONS_X11=virtualbox-guest-additions-x11=6.0.14-r0",
        "VIRTUALBOX_WITH_X11=true",
        "OS_VER={{user `os_ver`}}"
      ]
    },
    {
      "type": "shell",
      "only": ["vmware-iso", "esxi-iso"],
      "scripts": [
        "../provisioners/vmware_alpine3.9+.sh",
        "../provisioners/xorg-vmware.sh"
      ],
      "environment_vars": [
        "OS_VER={{user `os_ver`}}"
      ]
    },
    {
      "type": "shell",
      "only": ["qemu"],
      "script": "../provisioners/nfs.sh",
      "environment_vars": [
        "NFS_UTILS=nfs-utils=2.4.1-r2",
        "UTIL_LINUX=util-linux=2.34-r1"
      ]
    },
    {
      "type": "shell",
      "only": ["hyperv-iso"],
      "script": "../provisioners/hyperv.sh",
      "environment_vars": [
        "XF86_VIDEO_FBDEV=xf86-video-fbdev=0.5.0-r2"
      ]
    },
    {
      "type": "shell",
      "start_retry_timeout": "5m",
      "only": ["virtualbox-iso", "vmware-iso", "qemu", "hyperv-iso"],
      "script": "../provisioners/disk_cleanup.sh"
    },
    {
      "type": "shell",
      "script": "../provisioners/cleanup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso", "hyperv-iso"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.Alpine"
    },
    {
      "type": "vagrant",
      "only": ["vmware-iso", "qemu"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.Alpine",
      "keep_input_artifact": true
    }
  ]
}
