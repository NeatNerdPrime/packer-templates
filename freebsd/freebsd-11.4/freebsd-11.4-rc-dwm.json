{
  "variables": {
    "iso_image": "FreeBSD-11.4-RC1-amd64-disc1.iso",
    "path_to_iso": "FreeBSD/releases/ISO-IMAGES/11.4",
    "iso_checksum_type": "sha256",
    "iso_checksum": "6eef305e1702c3e2708abda00da9c1e4b8d586a31962bb205c73d17ffa3b37d2",
    "box_version": "1.20200522",
    "num_cpus": "2",
    "mem_size": "1024",
    "disk_size": "51200",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "root_password": "vagrant",
