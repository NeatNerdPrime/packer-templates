{
  "variables": {
    "variant": "dwm",
    "cpu": "amd64",
    "vm_name": "OpenBSD-6.8_BETA-amd64",
    "iso_image": "install68.iso",
    "iso_checksum": "sha256:83651ed9174bf27a56205d9128a4b79704d7537438f5cb93d0858b27779abc7a",
    "os_ver": "snapshots",
    "box_version": "6.8.20201008",
    "num_cpus": "2",
    "mem_size": "1024",
    "disk_size": "40960",
    "remote_host": "{{env `REMOTE_HOST`}}",
    "remote_username": "{{env `REMOTE_USERNAME`}}",
    "remote_password": "{{env `REMOTE_PASSWORD`}}",
    "remote_datastore": "{{env `REMOTE_DATASTORE`}}",
    "root_password": "vagrant",
    "vagrant_username": "vagrant",
    "vagrant_password": "vagrant",
    "package_server": "http://cdn.openbsd.org/pub/OpenBSD",
    "virtualbox_guest_os_type": "OpenBSD_64",
    "vmware_guest_os_type": "other-64",
    "headless": "false",
    "rsync_version": "3.2.3"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_wait": "30s",
      "cpus": "{{user `num_cpus`}}",
      "memory": "{{user `mem_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "guest_os_type": "{{user `virtualbox_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://cdn.openbsd.org/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "guest_additions_mode": "disable",
      "http_directory": ".",
      "output_directory": "output/{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-virtualbox",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "headless": "{{user `headless`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--rtcuseutc", "on" ],
        [ "modifyvm", "{{.Name}}", "--vram", "12" ]
      ],
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_with_x11.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "boot_wait": "50s",
      "cpus": "{{user `num_cpus`}}",
      "memory": "{{user `mem_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "0",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://cdn.openbsd.org/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "http_directory": ".",
      "output_directory": "output/{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-vmware",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}",
      "headless": "{{user `headless`}}",
      "network": "nat",
      "vmx_data": {
        "ethernet0.present": "TRUE",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "12582912"
      },
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_with_x11.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    },
    {
      "type": "vmware-iso",
      "name": "esxi-iso",
      "boot_wait": "50s",
      "cpus": "{{user `num_cpus`}}",
      "memory": "{{user `mem_size`}}",
      "disk_size": "{{user `disk_size`}}",
      "disk_type_id": "thin",
      "guest_os_type": "{{user `vmware_guest_os_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://cdn.openbsd.org/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "remote_type": "esx5",
      "remote_host": "{{user `remote_host`}}",
      "remote_username": "{{user `remote_username`}}",
      "remote_password": "{{user `remote_password`}}",
      "remote_datastore": "{{user `remote_datastore`}}",
      "http_directory": ".",
      "output_directory": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "skip_export": true,
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "headless": "{{user `headless`}}",
      "network": "bridged",
      "vmx_data": {
        "ethernet0.present": "TRUE",
        "ethernet0.networkName": "VM Network",
        "ethernet0.wakeOnPcktRcv": "FALSE",
        "ethernet0.addressType": "generated",
        "remotedisplay.vnc.enabled": "TRUE",
        "vhv.enable": "TRUE",
        "svga.vramSize": "12582912"
      },
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_with_x11.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    },
    {
      "type": "qemu",
      "boot_wait": "30s",
      "disk_size": "{{user `disk_size`}}",
      "cpus": "{{user `num_cpus`}}",
      "memory": "{{user `mem_size`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "iso_urls": [
        "iso/{{user `cpu`}}/{{user `iso_image`}}",
        "iso/{{user `iso_image`}}",
        "http://cdn.openbsd.org/pub/OpenBSD/{{user `os_ver`}}/{{user `cpu`}}/{{user `iso_image`}}"
      ],
      "ssh_username": "root",
      "ssh_password": "{{user `root_password`}}",
      "ssh_timeout": "10000s",
      "shutdown_command": "shutdown -h -p now",
      "http_directory": ".",
      "output_directory": "output/{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-qemu",
      "vm_name": "{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}",
      "headless": "{{user `headless`}}",
      "format": "qcow2",
      "accelerator": "kvm",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "disk_compression": true,
      "use_default_display": true,
      "boot_command": [
        "a<enter><wait>",
        "<wait10>",
        "http://{{ .HTTPIP }}:{{ .HTTPPort }}/install_with_x11.conf<enter><wait>",
        "<wait5>",
        "i<enter><wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "scripts": [
        "../provisioners/vagrant_openbsd6.2+.sh",
        "../provisioners/x11.sh",
        "../provisioners/dwm+dmenu+st.sh"
      ],
      "environment_vars": [
        "PKG_PATH={{user `package_server`}}/{{user `os_ver`}}/packages/{{user `cpu`}}",
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_GROUP={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "SLIM=1.3.6p24",
        "SLIM_THEMES=1.2.3p7",
        "DWM=6.2p2",
        "DMENU=4.9p1",
        "ST=0.8.4",
        "RSYNC={{user `rsync_version`}}"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso", "vmware-iso", "qemu"],
      "script": "../provisioners/disk_cleanup.sh"
    },
    {
      "type": "shell",
      "script": "../provisioners/cleanup.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "only": ["virtualbox-iso"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.OpenBSD-sh"
    },
    {
      "type": "vagrant",
      "only": ["vmware-iso", "qemu"],
      "compression_level": 9,
      "output": "./{{user `vm_name`}}-{{user `variant`}}-v{{user `box_version`}}-{{ .Provider }}.box",
      "vagrantfile_template": "../vagrantfiles/Vagrantfile.OpenBSD-sh",
      "keep_input_artifact": true
    }
  ]
}
