  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo \"PKG_PATH={{user `package_server`}}/pub/pkgsrc/packages/NetBSD/`uname -m`/8.0_2020Q1/All\" > /etc/pkg_install.conf"
      ],
      "inline_shebang": "/bin/sh -ex"
    },
    {
      "type": "shell",
      "only": ["vmware-iso", "esxi-iso"],
      "script": "../provisioners/vmware-xorg_netbsd8+.sh",
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} PATH=$PATH:/usr/sbin {{ .Path }}",
      "environment_vars": [
        "OPEN_VM_TOOLS=open-vm-tools-10.3.0nb8"
      ]
    },
    {
      "type": "shell",
      "scripts": [
        "../provisioners/vagrant_netbsd8+.sh",
        "../provisioners/dwm+st+dmenu_netbsd8+.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} PATH=$PATH:/usr/sbin {{ .Path }}",
      "environment_vars": [
