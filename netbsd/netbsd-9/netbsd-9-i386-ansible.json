  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo \"PKG_PATH={{user `package_server`}}/pub/pkgsrc/packages/NetBSD/`uname -m`/9.0_2020Q2/All\" > /etc/pkg_install.conf"
      ],
      "inline_shebang": "/bin/sh -ex"
    },
    {
      "type": "shell",
      "scripts": [
        "../provisioners/vagrant_netbsd8+.sh",
        "../provisioners/ansible_netbsd8.2+.sh"
      ],
      "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} PATH=$PATH:/usr/sbin {{ .Path }}",
      "environment_vars": [
        "VAGRANT_USER={{user `vagrant_username`}}",
        "VAGRANT_PASSWORD={{user `vagrant_password`}}",
        "VAGRANT_GROUP={{user `vagrant_group`}}",
        "SUDO=sudo-1.8.31p1",
        "RSYNC=rsync-3.1.3nb2",
        "PYTHON=python37-3.7.7",
        "PYTHON_PIP=py37-pip-20.1.1nb1",
        "ANSIBLE=ansible-2.9.10",
        "ANSIBLE_LINT_VERSION=4.2.0",
        "TESTINFRA_VERSION=5.0.0",
        "PIP=python3.7 -m pip"
      ]
    },
    {
      "type": "shell",
      "only": ["virtualbox-iso", "vmware-iso", "qemu"],
